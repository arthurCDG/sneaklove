<div class="big-container product-manage-wrapper flexed-item">
  <form method="post" action="/dashboard/edit/{{sneaker._id}}" class="edit-product-form" enctype="multipart/form-data">
    <h3 class="form-title"> Edit Sneaker</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-name" class="label-name label">Model name</label>
      <input id="sneaker-name" type="text" class="input-text input" placeholder="Nike Air Max 90" name="name"
        value="{{sneaker.name}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-ref" class="label-ref label">RÃ©f.</label>
      <input id="sneaker-ref" type="text" class="input-text input" placeholder="ex: NV23498" name="ref"
        value="{{sneaker.ref}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-size" class="label-ref label">Size</label>
      <input id="sneaker-size" type="number" class="input-text input" placeholder="ex: 37" name="size"
        value="{{sneaker.size}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-descr" class="label-descr label">Description</label>
      <input id="sneaker-descr" type="text" class="input-text input" placeholder="The better sneakers to run"
        name="description" value="{{sneaker.description}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-price" class="label-price label">Price</label>
      <input id="sneaker-price" type="number" class="sneaker-price input" min="1" name="price"
        value="{{sneaker.price}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-img" class="label-price label">Image</label>
      <input id="sneaker-img" type="file" class="sneaker-price input" name="image">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneaker-main-cat" class="label-main-cat label">Main category</label>
      <select id="main_category" class="select" required name="category" multiple>
        <option value="-1" disabled selected>Choose main Category...</option>
        <option value="men">Men</option>
        <option value="women">Women</option>
        <option value="kids">Kids</option>
      </select>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label class="label">Tags</label>
      {{> form_tags_select}}
    </div>
    <button class="button-primary add-sneaker-btn">Edit this sneaker</button>
  </form>
</div>